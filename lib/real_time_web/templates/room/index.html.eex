<div class="row">
  <div class="col-md-3">
    <h3>Rooms:</h3>
    <ul class="list-group">
    <%= for room <- @rooms do %>
      <li class="list-group-item">
        <%= link room.name, to: Routes.room_path(@conn, :show, room.id)%>
      </li>
      <% end %> 
    </ul>
  </div>
  <div class="col-md-9">
    <div class="jumbotron">
      <div class="page-header">
        <h2>Real Time Messaging App</h2>
      </div>
      <div class="page-header">
        <h2>
          <!-- fix -->
          <small>
            Choose or create a room.
          </small>
        </h2>
        <%= link "Create Room", to: Routes.room_path(@conn, :new), class: "btn
  btn-default" %>
      </div>
    </div>
  </div>
</div>
